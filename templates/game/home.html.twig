{% extends 'base.html.twig' %}

{% block title 'Home' %}

{% block content %}
    <a href="">Home</a>
    <hr />

    <h2>Guess the mysterious word</h2>

    <p class="attempts">
        {{ 'home.remaining_attempts'|transchoice(0) }}<br>
        {{ 'home.remaining_attempts'|transchoice(1) }}<br>
        {{ 'home.remaining_attempts'|transchoice(2) }}<br>
    </p>

    <ul class="word-letters">
        <li class="not-guessed">?</li>
        <li class="not-guessed">?</li>
        <li class="not-guessed">?</li>
        <li class="not-guessed">?</li>
        <li class="not-guessed">?</li>
    </ul>

    <p class="attempts">
        <a href="">Reset the game</a>
    </p>

    <br class="clearfix" />

    <h2>Try a letter</h2>

    <ul>
        {%  for  letter in 'A'..'Z' %}
            <li class="letter btn">
                <a href="">{{ letter }}</a>
            </li>
        {%  endfor %}
    </ul>

    <h2>Try a word</h2>

    <form action="" method="post" class="form-inline">
        <div class="form-group">
            <input name="word" class="form-control mb-2" placeholder="Word"/>
        </div>
        <button>Let me guess...</button>
    </form>

{% endblock %}